<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zonamagang.zonamagang.step_2_siswa">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:padding="16dp"
                android:background="@color/textColor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="LENGKAPI DATA SEKOLAH"
                    android:id="@+id/textView"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryText"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Provinsi"
                    android:id="@+id/textViewProvinsi"/>
                <Spinner
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:id="@+id/spinnerProvinsi"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="5dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Kabupaten/Kota"
                    android:id="@+id/textViewKota"/>
                <Spinner
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:id="@+id/spinnerKota"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sekolah"
                    android:id="@+id/textViewSekolah"/>
                <Spinner
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:id="@+id/spinnerSekolah"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bidang/Jurusan"
                    android:id="@+id/textViewBidang"/>
                <Spinner
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:id="@+id/spinnerBidang"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="5dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LANJUT"
                    android:id="@+id/BtnSiswa_step_2_submit"
                    android:textSize="18dp"
                    android:padding="15dp"
                    android:layout_below="@+id/editText8"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/editText8"
                    android:background="@color/colorAccent"
                    android:textColor="#fefefe"
                    android:layout_alignParentStart="true" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
