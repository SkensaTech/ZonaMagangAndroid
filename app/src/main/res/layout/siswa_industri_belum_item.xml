<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutIndustri"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/baruItemFoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/asu"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <TextView
                    android:id="@+id/namaIndustri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/baruItemFoto"
                    android:text="Simple Web Design" />

                <TextView
                    android:id="@+id/alamatIndustri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namaIndustri"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/baruItemFoto"
                    android:text="Jl. Merdeka No. 18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alamatIndustri"
                    android:layout_toRightOf="@+id/baruItemFoto"
                    android:id="@+id/telpIndustri"
                    android:text="081999589207"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telpIndustri"
                    android:layout_toRightOf="@+id/baruItemFoto"
                    android:id="@+id/emailIndustri"
                    android:text="herlambang.aditya456@gmail.com"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailIndustri"
                    android:layout_toRightOf="@+id/baruItemFoto"
                    android:id="@+id/kuotaIndustri"
                    android:text="Kuota 3 Orang"
                    android:layout_marginBottom="8dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:text="DAFTAR"
                    android:id="@+id/siswa_layout_belum_btnDaftar" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/siswa_layout_belum_btnDetail"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:text="Detail" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>