<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.zonamagang.zonamagang.step_1_industri"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/textColor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="LENGKAPI DATA INDUSTRI"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimaryText"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:layout_marginTop="40dp"
                    android:hint="Nama"
                    android:ems="10"
                    android:id="@+id/industri_step_1_nama"
                    android:textColorHint="@color/colorSecondaryText"
                    android:padding="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:layout_marginTop="16dp"
                    android:hint="Alamat"
                    android:ems="10"
                    android:id="@+id/industri_step_1_alamat"
                    android:padding="10dp"
                    android:textColorHint="@color/colorSecondaryText" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:layout_marginTop="16dp"
                    android:hint="No Telp"
                    android:ems="10"
                    android:id="@+id/industri_step_1_telp"
                    android:padding="10dp"
                    android:textColorHint="@color/colorSecondaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/industri_step_1_kota"
                        android:padding="10dp"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/textColor"
                    android:text="LANJUT"
                    android:id="@+id/industri_step_1_submit"
                    android:layout_gravity="center_horizontal"
                    android:onClick="nextStep" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>