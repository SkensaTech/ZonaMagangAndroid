<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:onClick="DetailSiswa"
                        android:paddingTop="12dp">

                        <ImageView
                            android:id="@+id/gambarSiswa"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/siswa_profile" />

                        <TextView
                            android:id="@+id/namaSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="Denandra Prasetya" />

                        <TextView
                            android:id="@+id/sekolahSiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/namaSiswa"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@id/gambarSiswa"
                            android:text="SMKN 1 Denpasar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sekolahSiswa"
                            android:layout_toRightOf="@+id/gambarSiswa"
                            android:text="RPL" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="#fff"
                            android:text="Tolak" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:text="Terima" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="12dp">

                        <ImageView
                            android:id="@+id/gambarSiswa2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/siswa_profile" />

                        <TextView
                            android:id="@+id/namaSiswa2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/gambarSiswa2"
                            android:text="Denandra Prasetya2" />

                        <TextView
                            android:id="@+id/sekolahSiswa2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/namaSiswa2"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@id/gambarSiswa2"
                            android:text="SMKN 1 Denpasar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sekolahSiswa2"
                            android:layout_toRightOf="@+id/gambarSiswa2"
                            android:text="RPL" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:background="@color/colorPrimaryDark"
                            android:text="Tolak" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:background="@color/colorPrimary"
                            android:text="Terima" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>